{% extends 'base.html.twig' %}

{% block title %}Rent{% endblock %}

{% block body %}
    <h1>Rent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rent.id }}</td>
            </tr>
            <tr>
                <th>Rent_time</th>
                <td>{{ rent.rentTime ? rent.rentTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Return_time</th>
                <td>{{ rent.returnTime ? rent.returnTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Start_mileage</th>
                <td>{{ rent.startMileage }}</td>
            </tr>
            <tr>
                <th>End_mileage</th>
                <td>{{ rent.endMileage }}</td>
            </tr>
            <tr>
                <th>Notice</th>
                <td>{{ rent.notice }}</td>
            </tr>
            <tr>
                <th>Person</th>
                <td>{{ rent.personId.name }} {{ rent.personId.lastName }}</td>
            </tr>
            <tr>
                <th>Vehicle</th>
                <td>{{ rent.vehicleId.brand }} {{ rent.vehicleId.model }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rent_index') }}">back to list</a>

    <a href="{{ path('app_rent_edit', {'id': rent.id}) }}">edit</a>

    {{ include('rent/_delete_form.html.twig') }}
{% endblock %}
