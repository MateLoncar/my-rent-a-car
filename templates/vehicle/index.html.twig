{% extends 'base.html.twig' %}

{% block title %}Vehicle index{% endblock %}

{% block body %}
    <h1>Vehicle index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Type</th>
                <th>Year_of_production</th>
                <th>Mileage</th>
                <th>No_of_seats</th>
                <th>No_of_door</th>
                <th>Active</th>
                <th>Rented</th>
                <th>Notice</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td>{{ vehicle.id }}</td>
                <td>{{ vehicle.brand }}</td>
                <td>{{ vehicle.model }}</td>
                <td>{{ vehicle.type }}</td>
                <td>{{ vehicle.yearOfProduction }}</td>
                <td>{{ vehicle.mileage }}</td>
                <td>{{ vehicle.noOfSeats }}</td>
                <td>{{ vehicle.noOfDoor }}</td>
                <td>{{ vehicle.active ? 'Yes' : 'No' }}</td>
                <td>{{ vehicle.rented ? 'Yes' : 'No' }}</td>
                <td>{{ vehicle.notice }}</td>
                <td>
                    <a href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}">show</a>
                    <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vehicle_new') }}">Create new</a>
{% endblock %}
